@model BMIApp.Models.BMIModel

@{
    ViewData["Title"] = "Tính chỉ số BMI";
}

<h2>Tính chỉ số BMI</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="Weight">Cân nặng (kg):</label>
        <input asp-for="Weight" class="form-control" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Height">Chiều cao (m):</label>
        <input asp-for="Height" class="form-control" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tính BMI</button>
</form>

@if (ViewBag.BMI != null)
{
    <div class="mt-3 alert alert-info">
        <p><strong>Chỉ số BMI của bạn là: </strong>@ViewBag.BMI</p>
        <p><strong>Phân loại BMI: </strong>@ViewBag.Category</p>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
