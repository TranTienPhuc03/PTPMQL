@model HoaDonApp.Models.HoaDonModel

@{
    ViewData["Title"] = "Tính Tiền Hóa Đơn";
}

<h2>Tính Tiền Hóa Đơn</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="SoLuong">Số lượng:</label>
        <input asp-for="SoLuong" class="form-control" />
        <span asp-validation-for="SoLuong" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DonGia">Đơn giá (VND):</label>
        <input asp-for="DonGia" class="form-control" />
        <span asp-validation-for="DonGia" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tính Tiền</button>
</form>

@if (ViewBag.ThanhTien != null)
{
    <div class="mt-3 alert alert-info">
        <p><strong>Tổng tiền: </strong>@ViewBag.ThanhTien</p>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
