@model HocPhanApp.Models.HocPhanModel

@{
    ViewData["Title"] = "Tính điểm học phần";
}

<h2>Tính điểm học phần</h2>

<form asp-action="Index" method="post">
    <div class="form-group">
        <label asp-for="DiemA">Điểm A (60%):</label>
        <input asp-for="DiemA" class="form-control" />
        <span asp-validation-for="DiemA" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiemB">Điểm B (30%):</label>
        <input asp-for="DiemB" class="form-control" />
        <span asp-validation-for="DiemB" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiemC">Điểm C (10%):</label>
        <input asp-for="DiemC" class="form-control" />
        <span asp-validation-for="DiemC" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Tính điểm</button>
</form>

@if (ViewBag.DiemHocPhan != null)
{
    <div class="mt-3 alert alert-info">
        <p><strong>Điểm học phần của bạn là: </strong>@ViewBag.DiemHocPhan</p>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
